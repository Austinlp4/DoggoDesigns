    "FROM node:18-alpine",
    "RUN mkdir -p /usr/src/app",
    "WORKDIR /usr/src/app",
    "COPY package*.json ./",
    "RUN npm cache clean --force",
    "ENV NODE_OPTIONS=--max_old_space_size=2048",
    "RUN npm ci --only=production",
    "COPY . .",
    "RUN npm run build",
    "EXPOSE 3000",
    "CMD [\"npm\", \"start\"]"
