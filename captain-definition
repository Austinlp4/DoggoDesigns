{
  "schemaVersion": 2,
  "dockerfileLines": [
    "FROM node:18-alpine",
    "RUN apk add --no-cache libc6-compat",
    "RUN mkdir -p /usr/src/app",
    "WORKDIR /usr/src/app",
    "COPY package.json yarn.lock ./",
    "RUN yarn install --frozen-lockfile --production",
    "COPY . .",
    "RUN yarn build",
    "EXPOSE 3000",
    "CMD [\"yarn\", \"start\"]"
  ]
